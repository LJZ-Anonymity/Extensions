<local:BaseMenuWindow x:Class="Quicker.Examples.SampleContextMenu"
        xmlns:local="clr-namespace:Quicker.Windows.Menus;assembly=Quicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SampleContextMenu" 
        Width="200" 
        Height="150"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize">
    
    <Border Background="LightGreen" 
            CornerRadius="8" 
            BorderBrush="DarkGreen" 
            BorderThickness="2">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- 标题 -->
            <TextBlock Grid.Row="0" 
                       Text="示例菜单" 
                       FontSize="16" 
                       FontWeight="Bold"
                       Foreground="DarkGreen"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Margin="0,0,0,10"/>
            
            <!-- 内容区域 -->
            <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center">
                <TextBlock Text="这是一个示例扩展菜单" 
                           FontSize="12"
                           Foreground="DarkGreen"
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,5"/>
                <TextBlock Text="支持所有菜单功能：" 
                           FontSize="10"
                           Foreground="DarkGreen"
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,2"/>
                <TextBlock Text="• 淡入淡出动画" 
                           FontSize="10"
                           Foreground="DarkGreen"
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,2"/>
                <TextBlock Text="• 失焦自动关闭" 
                           FontSize="10"
                           Foreground="DarkGreen"
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,2"/>
                <TextBlock Text="• 智能焦点管理" 
                           FontSize="10"
                           Foreground="DarkGreen"
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,2"/>
                <TextBlock Text="• 自动置顶显示" 
                           FontSize="10"
                           Foreground="DarkGreen"
                           HorizontalAlignment="Center"/>
            </StackPanel>
            
            <!-- 底部信息 -->
            <TextBlock Grid.Row="2" 
                       Text="点击其他地方关闭" 
                       FontSize="9"
                       Foreground="Gray"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Margin="0,10,0,0"/>
        </Grid>
    </Border>
</local:BaseMenuWindow>
